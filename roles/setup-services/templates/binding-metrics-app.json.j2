{
  "apiVersion": "servicecatalog.k8s.io/v1beta1",
  "kind": "ServiceBinding",
  "metadata": {
    "name": "mobile-metrics-app-binding",
    "labels": {
      "mobileclients.mobile.k8s.io/clientId": "{{ appname }}"
    },
    "annotations": {
      "binding.aerogear.org/consumer": "{{ appname }}",
      "binding.aerogear.org/provider": "mobile-metrics" 
    }
  },
  "spec": {
    "instanceRef": {
      "name": "mobile-metrics"
    },
    "parameters": {
      "CLIENT_ID": "{{ appname }}"
    }
  }
}